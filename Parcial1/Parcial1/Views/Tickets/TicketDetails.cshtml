@model Parcial1.Data.Entities.Ticket

@{
    ViewData["Title"] = "Asignar boleta";
}

<style>
    .title{
        font-weight: bold;
    }
</style>

<h2 style="text-align:center;">Boleta asignada:</h2>
<br />
<div class="row" style="text-align:center;">
    <div class="col-md-3 offset-3">
        <div class="form-group">
            <p class="title">@Html.DisplayNameFor(model => model.Document)</p>
        </div>
        <div class="form-group">
            <p class="title">@Html.DisplayNameFor(model => model.Name)</p>
        </div>
        <div class="form-group">
            <p class="title">@Html.DisplayNameFor(model => model.Date)</p>
        </div>
        <div class="form-group">
            <p class="title">@Html.DisplayNameFor(model => model.Entrance.Description)</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <p>@Html.DisplayFor(model => model.Document)</p>
        </div>
        <div class="form-group">
            <p>@Html.DisplayFor(model => model.Name)</p>
        </div>
        <div class="form-group">
            <p>@Html.DisplayFor(model => model.Date)</p>
        </div>
        <div class="form-group">
            <p>@Html.DisplayFor(model => model.Entrance.Description)</p>
        </div>
    </div>
    <div class="form-group">
        <a class="btn btn-outline-success" asp-action="SearchTicket">Regresar</a>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}